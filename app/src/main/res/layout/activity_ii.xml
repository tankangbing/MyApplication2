    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/Titletext"
                android:text="个人信息"
                />
            <ImageButton
                android:id="@+id/im_ge_pre"
                style="@style/TitleImage"
                android:src="@drawable/pre"
                android:onClick="gebacke"/>

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >
        <TextView
            android:text="姓   名："
            style="@style/Ii"/>
        <EditText
            android:id="@+id/edt_ge_name"
            style="@style/IiEt"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >
        <TextView
            style="@style/Ii"
            android:text="性   别："
           />
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:id="@+id/rg">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="男"
            android:id="@+id/rb1"
            android:checked="true"
            android:textColor="#6a6a6a"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:text="女"
            android:id="@+id/rb2"
            android:textColor="#6a6a6a"
            />
        </RadioGroup>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:id="@+id/tv_ge_height"
            style="@style/Ii"
            android:text="身   高："
            />

        <EditText
            android:id="@+id/edt_ge_height"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/tv_ge_height"
            android:maxLength="3"
            android:numeric="decimal"
            android:padding="8dp"
            android:textColor="#000"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/tv_cm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="5dp"
            android:text="C M"
            android:textColor="#02cea8"
            android:textSize="20dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:id="@+id/tv_weight"
            style="@style/Ii"
            android:text="体   重："
      />
        <EditText
            android:id="@+id/edt_ge_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numeric="decimal"
            android:maxLength="3"
            android:padding="5dp"
            android:layout_toRightOf="@+id/tv_weight"
            android:layout_marginLeft="5dp"
            android:textSize="20dp"
            android:textColor="#000"

            />
        <TextView
            android:id="@+id/tv_kg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="8dp"
            android:text="K G"
            android:textSize="20dp"
            android:textColor="#02cea8"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >
        <TextView
            style="@style/Ii"
            android:text="生   日："/>

        <EditText
            android:id="@+id/edt_ge_path"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:numeric="decimal"
            android:padding="8dp"
            android:singleLine="true"
            android:textColor="#000"
            android:textSize="20dp"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >
        <TextView
            style="@style/Ii"
            android:text="医   嘱："

           />

        <EditText
            android:id="@+id/edt_ge_advice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginLeft="5dp"
            android:textSize="17dp"
            android:textColor="#000"
            android:singleLine="true"
            />

    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="保存"
        android:textSize="17dp"
        android:textColor="#fff"
        android:background="@drawable/btn_selector"
        android:onClick="save"/>

</LinearLayout>