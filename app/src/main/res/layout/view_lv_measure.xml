<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dffcf9"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            >
            <TextView
                android:id="@+id/tv_view_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-05-22"
                android:textSize="17dp"
                android:textColor="#000"/>
            <TextView
                android:id="@+id/tv_view_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_view_day"
                android:layout_centerHorizontal="true"
                android:text="17:00"
                android:textSize="17dp"
                android:textColor="#000"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            >
            <TextView
                android:id="@+id/tv_view_hight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="230/"
                android:textSize="17dp"
                android:textColor="#000"/>
            <TextView
                android:id="@+id/tv_view_low"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_view_hight"
                android:text="35"
                android:textSize="17dp"
                android:textColor="#000"/>

        </RelativeLayout>
        <TextView
            android:id="@+id/tv_view_pules"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="130"
            android:textSize="17dp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/tv_view_remark"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="备注"
            android:textColor="#000"
            android:textSize="17dp" />
    </LinearLayout>

</LinearLayout>